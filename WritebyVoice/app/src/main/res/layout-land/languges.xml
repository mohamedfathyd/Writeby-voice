<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bac"
    android:orientation="vertical" >
<ImageView
    android:minHeight="?attr/actionBarSize"
    android:layout_width="600dp"
    android:layout_height="70dp"
    android:background="@drawable/bar"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        >
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"

            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:weightSum="1">


            <Button
                android:id="@+id/englishbritich"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/brieng"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/arabic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/arabic"
                android:layout_gravity="right"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/englishamerican"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/amiricanenglish"
                android:layout_gravity="right"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/french"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/french"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/italy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/italy"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/spain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spain"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/germany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/germany"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/china"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/china"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/japan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/japan"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/portugal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/portugal"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/cannada"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/canada"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/russian"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ru"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/india"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/india"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/turkey"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/turkey"

                android:layout_gravity="right"
                android:layout_marginTop="20dp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>